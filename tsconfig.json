{
  "compilerOptions": {
    /* =====================================
       Core
    ===================================== */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",

    /* =====================================
       Next.js + TS behavior
    ===================================== */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,

    /* =====================================
       Module system
    ===================================== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* =====================================
       PATH ALIASES (ðŸ”¥ THIS FIXES YOUR ERROR)
    ===================================== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* =====================================
       Next.js plugin
    ===================================== */
    "plugins": [{ "name": "next" }]
  },

  /* =====================================
     Files to include
  ===================================== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  /* =====================================
     Exclusions
  ===================================== */
  "exclude": ["node_modules", ".next"]
}
